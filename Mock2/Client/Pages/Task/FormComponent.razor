@* @using Mock2.Client.Components *@
@using Mock2.Shared.Domain;
@inject HttpClient _client
<EditForm Model="@mtask" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Task Name: </label>
            <div>
                <InputText @bind-Value="mtask.TaskName" class="form-control" />
                <ValidationMessage For="@(() => mtask.TaskName)" />
            </div>
        </div>
        <div class="form-group">
            <label>Is Completed: </label>
            <div>
                <InputCheckbox @bind-Value="mtask.IsCompleted" class="form-control" />
                <ValidationMessage For="@(() => mtask.IsCompleted)" />
            </div>
        </div>
        <div class="form-group">
            <label>Due Date: </label>
            <div>
                <InputDate @bind-Value="mtask.DueDate" class="form-control" />
                <ValidationMessage For="@(() => mtask.DueDate)" />
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Mtask? mtask { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Initialization logic, if any
    }
}
